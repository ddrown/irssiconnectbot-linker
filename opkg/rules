#!/bin/sh
set -e 

PACKAGE=linker

case "$1" in
  build)
    env GOOGLE_PLATFORM=8 make
    ;;

  install)
    DESTDIR=~/tmp/$PACKAGE
    rm -rf $DESTDIR
    mkdir -p $DESTDIR/data/data/org.woltage.irssiconnectbot/files/bin
    install -m755 linker $DESTDIR/data/data/org.woltage.irssiconnectbot/files/bin
    ;;

  clean)
    make clean
    ;;

  *)
    echo unknown argument $1
    ;;
esac
